<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="60dp"
                >
                <TextView
                    android:id="@+id/tv_inbound_type"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="移库类型"
                    android:paddingLeft="10dp"
                    android:textSize="15sp"
                    />
                <Spinner
                    android:id="@+id/stock_transfer_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/jt2"
                    android:paddingLeft="5dp"
                    android:layout_toRightOf="@+id/tv_inbound_type" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="110dp"
                >
                <TextView
                    android:id="@+id/tv_producer1"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="关联订单号"
                    android:paddingLeft="10dp"
                    android:textSize="15sp"
                    />
                <EditText
                    android:id="@+id/ed_producer"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:paddingLeft="5dp"
                    android:background="@drawable/edit_bg"
                    android:layout_toRightOf="@+id/tv_producer1" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="160dp"
                >
                <TextView
                    android:id="@+id/tv_producer"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="制单日期"
                    android:paddingLeft="10dp"
                    android:textSize="15sp"
                    />
                <EditText
                    android:id="@+id/ed_outbound_producer"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:paddingLeft="5dp"
                    android:background="@drawable/edit_bg"
                    android:layout_toRightOf="@+id/tv_producer" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="210dp"
                >
                <TextView
                    android:id="@+id/tv_consignor"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="货主"
                    android:paddingLeft="10dp"
                    android:textSize="15sp"
                    />
                <EditText
                    android:id="@+id/ed_consignor"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:paddingLeft="5dp"
                    android:background="@drawable/edit_bg"
                    android:layout_toRightOf="@+id/tv_consignor" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="260dp"
                >
                <TextView
                    android:id="@+id/tv_Warehouse"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="仓库"
                    android:textSize="15sp"
                    />
                <Spinner
                    android:id="@+id/spinner_warehouse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/jt2"
                    android:paddingLeft="5dp"
                    android:layout_toRightOf="@+id/tv_Warehouse" />

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:layout_marginTop="310dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="330dp"
                android:text="物资明细"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="360dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:text="暂无物资明细，点击“新增物资”按钮添加"/>

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/btn_add_stock_transfer_supplies"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="新增物资"
            android:background="@drawable/button_select"
            android:textSize="15sp"
            android:clickable="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="40dp"

            android:textColor="@color/white"/>
        <Button
            android:id="@+id/btn_save"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="保存"

            android:background="@drawable/button_select"
            android:textSize="15sp"
            android:clickable="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="40dp"

            android:textColor="@color/white"/>
    </RelativeLayout>
</RelativeLayout>
